<UserControl x:Class="BMHRI.WCS.Server.UserControls.DeviceManagerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BMHRI.WCS.Server.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <WrapPanel x:Name="DeviceManagerPanel" Background="#FAF3E0"/>
        <Border Grid.Row="1" BorderBrush="#FAF3E0" BorderThickness="1" Background="#FAF3E0">
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="设备全部联机" Margin="10" Style="{StaticResource BtnInfoStyle}" Click="AllDeviceOnlineBT_Click"></Button>
                <Button Content="设备全部脱机" Margin="10" Style="{StaticResource BtnInfoStyle}" Click="AllDeviceOfflineBT_Click"></Button>
            </WrapPanel>
        </Border>
    </Grid>
    <!--<WrapPanel x:Name="DeviceManagerPanel" />-->
    
</UserControl>
