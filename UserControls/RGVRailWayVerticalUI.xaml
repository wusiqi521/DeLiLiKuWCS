<UserControl x:Name="userControl" x:Class="BMHRI.WCS.Server.UserControls.RGVRailWayVerticalUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BMHRI.WCS.Server.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="13">
    <Grid >
        <Line X1="0" Y1="0" X2="0" Y2="{Binding ActualHeight, ElementName=userControl}" Stroke="Blue" StrokeThickness="0.2"/>

        <Line X1="5.5" Y1="0" X2="5.5" Y2="{Binding ActualHeight,ElementName=userControl}" Stroke="Blue" StrokeThickness="0.2"/>
    </Grid>
</UserControl>

