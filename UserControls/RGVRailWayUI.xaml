<UserControl x:Name="userControl" x:Class="BMHRI.WCS.Server.UserControls.RGVRailWayUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BMHRI.WCS.Server.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="13" d:DesignWidth="450">
    <Grid >
        <Line X1="0" Y1="0" X2="{Binding ActualWidth, ElementName=userControl}" Y2="0" Stroke="red" StrokeThickness="0.2"/>
        <Line X1="0" Y1="13" X2="{Binding ActualWidth, ElementName=userControl}" Y2="13" Stroke="red" StrokeThickness="0.2"/>
    </Grid>
</UserControl>

